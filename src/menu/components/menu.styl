@import '../../_base/lib/stylus/_init.styl'

.Menu 
	_bc($lightBlue)
	_dfr(flex-start, center)
	_h(65px)
	_reset(0)
	ul
		_dfr(center, center)
		_fullH()
		_fullW()
		_lsn()
		_reset(0)
		li
			_dfr(center, center)
			_fullH()
			_padd(10px)
			_ta(center)
			_w(16.6%)
			&:hover 
				border-bottom 8px solid $red
			a
				_aReset(white)
				_dfr(center, flex-start)
				_fullH()
				_fz(14px)
				_h(50%)
				_p(17px, 0, 17px, 0)
				_ta(center)
				will-change transform
				&:hover 
					_fwb()
				&:active 
					transform scale(.9)
	