.Menu 
	margin 0
	padding 0
	height 103px
	display flex 
	align-items center
	background-color #0974B7
	padding 0
	ul
		align-items center
		display flex
		height 100%
		justify-content center
		list-style none 
		margin 0
		padding 0
		width 100%
		li 
			align-items flex-start
			display flex
			height 80%
			justify-content center
			padding 10px
			text-align center
			width 16.6%
			&:hover 
				border-bottom 8px solid #EB1B23
			a 
				color white
				font-size 1em
				padding 17px 0
				text-decoration none
				will-change transform
				&:hover 
					font-weight bold
				&:active 
					transform scale(.9)
	